<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Display -->
    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp"
        android:text=""
        android:textColor="#BBBBBB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:layout_marginTop="12dp">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnAC"
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="2"
            android:layout_margin="5dp"
            android:backgroundTint="#FF9800"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSin"
            android:text="SIN"
            style="@style/DarkBtn" />

        <Button
            android:id="@+id/btnCos"
            android:text="COS"
            style="@style/DarkBtn" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btnTan"
            android:text="TAN"
            style="@style/DarkBtn" />

        <Button
            android:id="@+id/btnLog"
            android:text="LOG"
            style="@style/DarkBtn" />

        <Button
            android:id="@+id/btnSqrt"
            android:text="√"
            style="@style/DarkBtn" />

        <Button
            android:id="@+id/btnDiv"
            android:text="÷"
            style="@style/OrangeBtn" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btnMul"
            android:text="×"
            style="@style/OrangeBtn" />

        <Button
            android:id="@+id/btn7"
            android:text="7"
            style="@style/NumberBtn" />

        <Button
            android:id="@+id/btn8"
            android:text="8"
            style="@style/NumberBtn" />

        <Button
            android:id="@+id/btn9"
            android:text="9"
            style="@style/NumberBtn" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btnMinus"
            android:text="-"
            style="@style/OrangeBtn" />

        <Button
            android:id="@+id/btn4"
            android:text="4"
            style="@style/NumberBtn" />

        <Button
            android:id="@+id/btn5"
            android:text="5"
            style="@style/NumberBtn" />

        <Button
            android:id="@+id/btn6"
            android:text="6"
            style="@style/NumberBtn" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/btnPlus"
            android:text="+"
            style="@style/OrangeBtn" />

        <Button
            android:id="@+id/btn1"
            android:text="1"
            style="@style/NumberBtn" />

        <Button
            android:id="@+id/btn2"
            android:text="2"
            style="@style/NumberBtn" />

        <Button
            android:id="@+id/btn3"
            android:text="3"
            style="@style/NumberBtn" />

        <!-- Row 6 -->
        <Button
            android:id="@+id/btnEqual"
            android:text="="
            style="@style/OrangeBtn" />

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="2"
            android:layout_margin="5dp"
            android:backgroundTint="#7A7A7A"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDot"
            android:text="."
            style="@style/NumberBtn" />

        <!-- Row 7 -->
        <Button
            android:id="@+id/btnOpen"
            android:text="("
            style="@style/DarkBtn" />

        <Button
            android:id="@+id/btnClose"
            android:text=")"
            style="@style/DarkBtn" />

        <Button
            android:id="@+id/btnPow"
            android:text="^"
            style="@style/DarkBtn" />

    </GridLayout>

</LinearLayout>
